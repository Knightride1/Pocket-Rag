# ============================================
# Pocket RAG - Environment Configuration
# ============================================
# Copy this file to .env and modify values as needed

# ============================================
# Backend Configuration
# ============================================

# Ollama LLM Server
# For Docker: Use http://host.docker.internal:11434 (Docker Desktop/Windows)
# For Linux with Docker: Use http://host.docker.internal:11434 (Docker 20.10+) 
#                        or http://localhost:11434 (if running without Docker)
OLLAMA_BASE_URL=http://host.docker.internal:11434

# Qdrant Vector Database
# When using Docker: Use http://qdrant:6333 (service name in network)
# When running locally: Use http://localhost:6333
QDRANT_URL=http://qdrant:6333

# Qdrant API Key
QDRANT_API_KEY=pocket-rag-secret

# FastAPI Host and Port
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# Python Settings
PYTHONUNBUFFERED=1

# ============================================
# Model Configuration
# ============================================

# Embedding Model (for generating embeddings from documents)
EMBEDDING_MODEL=nomic-embed-text

# LLM Model (for generating answers)
LLM_MODEL=qwen3:1.7b

# ============================================
# Application Configuration
# ============================================

# Maximum file upload size (in MB)
MAX_UPLOAD_SIZE=50

# Number of context chunks to retrieve
CONTEXT_CHUNKS=3

# Document chunk size (characters)
CHUNK_SIZE=1000

# Chunk overlap (characters)
CHUNK_OVERLAP=200

# ============================================
# Frontend Configuration (Streamlit)
# ============================================

# Streamlit Server Address
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_PORT=8501

# Backend API URL
API_URL=http://localhost:8000

# ============================================
# Logging Configuration
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# Database Configuration
# ============================================

# Chat history database location
CHAT_HISTORY_DB=./backend/chat_history.db

# PDF upload directory
UPLOADED_PDFS_DIR=./backend/uploaded_pdfs

# ============================================
# Docker-Specific Settings
# ============================================

# Compose project name
COMPOSE_PROJECT_NAME=pocket-rag

# Network name
DOCKER_NETWORK=pocket-rag-network
